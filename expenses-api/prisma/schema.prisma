generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Usuario {
  id            Int           @id @default(autoincrement())
  nombre        String
  correo        String        @unique
  contrasena    String
  cuentas       Cuenta[]
  gastos        Gasto[]
  categorias    Categoria[]
  ingresos      Ingreso[]
  presupuestos  Presupuesto[]
  creadoEn      DateTime      @default(now())
  actualizadoEn DateTime      @updatedAt
}

model Cuenta {
  id            Int       @id @default(autoincrement())
  usuarioId     Int
  usuario       Usuario   @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  nombre        String
  gastos        Gasto[]
  ingresos      Ingreso[]
  creadoEn      DateTime  @default(now())
  actualizadoEn DateTime  @updatedAt
}

model Categoria {
  id            Int           @id @default(autoincrement())
  usuarioId     Int
  usuario       Usuario       @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  nombre        String
  gastos        Gasto[]
  presupuestos  Presupuesto[]
  creadoEn      DateTime      @default(now())
  actualizadoEn DateTime      @updatedAt

  @@unique([nombre, usuarioId])
}

model Gasto {
  id            Int        @id @default(autoincrement())
  descripcion   String
  monto         Decimal    @db.Decimal(10, 2)
  fecha         DateTime
  categoriaId   Int?
  categoria     Categoria? @relation(fields: [categoriaId], references: [id], onDelete: SetNull)
  cuentaId      Int?
  cuenta        Cuenta?    @relation(fields: [cuentaId], references: [id], onDelete: SetNull)
  usuarioId     Int?
  usuario       Usuario?   @relation(fields: [usuarioId], references: [id], onDelete: SetNull)
  comercio      String?
  creadoEn      DateTime   @default(now())
  actualizadoEn DateTime   @updatedAt
}

model Ingreso {
  id            Int      @id @default(autoincrement())
  descripcion   String
  monto         Decimal  @db.Decimal(10, 2)
  fecha         DateTime
  usuarioId     Int
  usuario       Usuario  @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  cuentaId      Int?
  cuenta        Cuenta?  @relation(fields: [cuentaId], references: [id], onDelete: SetNull)
  creadoEn      DateTime @default(now())
  actualizadoEn DateTime @updatedAt
}

model Presupuesto {
  id            Int       @id @default(autoincrement())
  cantidad      Decimal   @db.Decimal(10, 2)
  mes           Int
  anio          Int
  categoriaId   Int
  categoria     Categoria @relation(fields: [categoriaId], references: [id], onDelete: Cascade)
  usuarioId     Int
  usuario       Usuario   @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  creadoEn      DateTime  @default(now())
  actualizadoEn DateTime  @updatedAt

  @@unique([categoriaId, mes, anio])
}
